{
  "name": "ts-node-dev",
  "version": "1.0.0-pre.30",
  "description": "Compiles your TS app and restarts when files are modified.",
  "keywords": [
    "restart",
    "reload",
    "supervisor",
    "monitor",
    "watch"
  ],
  "author": "Felix Gnass",
  "contributors": [
    "Daniel Gasienica <daniel@gasienica.ch> (https://github.com/gasi/)"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/whitecolor/ts-node-dev.git"
  },
  "license": "MIT",
  "bin": {
    "ts-node-dev": "./bin/ts-node-dev"
  },
  "main": "./lib",
  "files": [
    "bin",
    "icons",
    "lib"
  ],
  "preferGlobal": true,
  "engines": {
    "node": ">=0.8.0"
  },
  "scripts": {
    "ts-node-dev": "node ./bin/ts-node-dev",
    "test-node-dev": "tap test/*.js",
    "test": "node ./bin/ts-node-dev -r tsconfig-paths/register -r ./test/ts/add-require.js -r ./test/ts/add-require-2.js -O \"{\\\"module\\\": \\\"commonjs\\\"}\" --respawn --ignore-watch 'lib' --ignore-watch bin --prefer-ts --cache-directory .ts-node test/ts/test-script test-arg --fd && jest --coverage",
    "test-docker": "docker run --rm -v ${PWD}:/app mhart/alpine-node:8.7.0 sh -c 'cd app && node ./bin/ts-node-dev --cache-directory .ts-node test/ts/big'",
    "posttest": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "dateformat": "~1.0.4-1.2.3",
    "dynamic-dedupe": "^0.2.0",
    "filewatcher": "~3.0.0",
    "generator-jest": "^1.6.0",
    "generator-license": "^5.4.0",
    "minimist": "^1.1.3",
    "mkdirp": "^0.5.1",
    "node-notifier": "^4.0.2",
    "resolve": "^1.0.0",
    "rimraf": "^2.6.1",
    "ts-node": "*",
    "tsconfig": "^7.0.0",
    "yarn": "^1.10.1"
  },
  "devDependencies": {
    "@types/node": "^8.0.4",
    "coffee-script": "^1.8.0",
    "coveralls": "^3.0.2",
    "eslint": "^2.0.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.1",
    "jest": "^23.6.0",
    "tap": "^5.2.0",
    "touch": "^1.0.0",
    "tsconfig-paths": "^3.3.1",
    "typescript": "^2.3.4"
  }
}
